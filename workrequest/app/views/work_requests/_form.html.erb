  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= collection_select(:work_request, :category_id, Category.all,:id,:title ,{:include_blank => 'Please select a category'}) %>
  </div>
  <div class="field">
    <%= f.label :status_id %><br />
    <%= collection_select(:work_request, :status_id, Status.all,:id,:title,{:include_blank => 'Please select a status'}) %>
  </div>
  <div class="field">
    <%= f.label :plant_id %><br />
    <%= collection_select(:work_request, :plant_id, Plant.all,:id,:title, {:include_blank => 'Please select a plant'}) %>
  </div>
  <div class="field">
    <%= f.label :area_id %><br />
    <%= collection_select(:work_request, :area_id, Area.all,:id,:title, {:include_blank => 'Please select an area'}) %>
    
  </div>
  <div class="field">
    <%= f.label :requestors %><br />
    <%= f.text_field :requestors %>
  </div>
  <div class="field">
    <%= f.label :queue %><br />
    <%= f.text_field :queue %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
