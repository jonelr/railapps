<%= form_for(@work_request) do |f| %>
  <% if @work_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work_request.errors.count, "error") %> prohibited this work_request from being saved:</h2>

      <ul>
      <% @work_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
