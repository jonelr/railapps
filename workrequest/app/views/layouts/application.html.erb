<!DOCTYPE html>
<html>
<head>
  <title>Workrequest</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.0/jquery.mobile-1.3.0.min.css" />
  <script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
  <script src="http://code.jquery.com/mobile/1.3.0/jquery.mobile-1.3.0.min.js"></script>
  <meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1">
</head>
<body>

<div data-role="page" id="page1" data-ajax="false">
	<div data-role="header" data-position="fixed" data-theme="b">
        <h3 >
            Work Request Database
        </h3>
  	</div>
  
	<div data-role="content" data-ajax="false">
	    <p class="notice"><%= notice %></p>
	    <p class="alert"><%= alert %></p>

		<%= yield %>
	</div>

	<div data-role="footer" data-position="fixed">
        <div data-role="navbar" data-ajax="false">
          <ul>
            <li><%= link_to "Home", root_url, :data=>{:ajax => "false", :icon=>"home", :iconpos=>"left", :theme=>"b"} %></li>
            <% if user_signed_in? %>
          	<li>
          		<%= link_to "Logout", destroy_user_session_path, :data => {:'ajax' => "false", :icon=>"delete", :confirm=>"Are you sure?", :theme=>"b"}, :method => :delete %>
          	</li>
            <% end %>
          </ul>
        </div>
  </div>
</div>

</body>
</html>
